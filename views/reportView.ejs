<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <title>Report</title>
</head>
<body>
    <div class="container mb-3">
        <form action="/" class="mt-3" method="GET">
            <button class="btn btn-primary">Back to Home</button>
        </form>
        <button class="btn btn-success" id="download-pdf">Download Report</button>
    </div>
    <div class="container mb-3" id="report-content">
        <!-- For Chart -->
        <canvas id="barChart"></canvas>
        <!-- For aggregated statistics -->
        <div class="row mt-3 gy-3">
            <div class="col-3">
                <div class="card">
                    <h5 class="card-header text-center"><i class="far fa-handshake"></i> Total Violations</h5>
                    <div class="card-body">
                        <h6 class="card-title text-center">Aggregated violations for period</h6>
                        <h3 class="text-center"><%= totalViolations %> </h3>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <h5 class="card-header text-center"><i class="fas fa-users"></i> Total Headcount</h5>
                    <div class="card-body">
                        <h6 class="card-title text-center">Aggregated headcount for period</h6>
                        <h3 class="text-center"><%= totalHeadcount %> </h3>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <h5 class="card-header text-center"><i class="fas fa-sort-amount-up"></i> Highest Violation Counts</h5>
                    <div class="card-body">
                        <div class="container w-75">
                            <% for (let record of topViolations) { %>
                                <h6 class="card-title"><%= helper.sliceDateString(record.recordDate) %> <i class="fas fa-long-arrow-alt-right"></i> <span class="badge bg-danger"><%= record.violationCount %></span></h6>
                            <% } %> 
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-3">
                <div class="card">
                    <h5 class="card-header text-center"><i class="fas fa-sort-amount-up"></i> Highest Headcounts</h5>
                    <div class="card-body">
                        <div class="container w-75">
                            <% for (let record of topHeadcounts) { %>
                                <h6 class="card-title"><%= helper.sliceDateString(record.recordDate) %> <i class="fas fa-long-arrow-alt-right"></i> <span class="badge bg-warning"><%= record.headcount %></span></h6>
                            <% } %> 
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
        integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"
        integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/"
        crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.js" 
        integrity="sha512-vNrhFyg0jANLJzCuvgtlfTuPR21gf5Uq1uuSs/EcBfVOz6oAHmjqfyPoB5rc9iWGSnVE41iuQU4jmpXMyhBrsw==" 
        crossorigin="anonymous" 
        referrerpolicy="no-referrer"></script>

    <script src="/javascripts/pdfDownload.js"></script>

    <script>
        // Parsing to access local storage
        var reportData = '<%- JSON.stringify(reportRecords) %>';
        var workableData = JSON.parse(reportData);
        // Defining arrays for the chart
        let dateArray = [];
        let violationArray = [];
        let headcountArray = [];

        // Pushing record data to arrays
        for (let record of workableData) {
            dateArray.unshift(record.recordDate.slice(0, 10));
            violationArray.unshift(record.violationCount);
            headcountArray.unshift(record.headcount);
        }

        // For displaying charts
        const barChart = document.getElementById('barChart').getContext('2d');

        Chart.defaults.global.defaultFontColor = '#000';
        const barChartDisplay = new Chart(barChart, {
            type: 'bar', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
            data: {
                labels: dateArray,
                datasets: [
                    {
                        label:'Violations',
                        data: violationArray,
                        backgroundColor: '#e07502',
                        fill: true,
                        borderColor: '#000',
                        color: '#000',
                        tension: 0.3
                    },
                    {
                        label:'Headcount',
                        data: headcountArray,
                        backgroundColor: '#fcca00',
                        fill: true,
                        borderColor: '#000',
                        color: '#000',
                        tension: 0.3
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Violation Records',
                    fontSize: 25
                },
                layout: {
                    padding: {
                        left: 0,
                        right: 0,
                        bottom: 0,
                        top: 0
                    }
                },
                tooltips: {
                    enabled: true
                }
            }
        });
    </script>
</body>
</html>