<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous"/>
    <title>Distancing Analytics</title>

    <link rel="stylesheet" href="/styles/style.css">

</head>

<body class="main-background">
    <div class="container-fluid accent-background colored-text bg-opacity-25 p-5">
        <div class="container">
            <h2><i class="far fa-chart-bar"></i> Social Distancing Dashboard</h2>
            <h4>See your uploaded distancing data here and view older records.</h4>
            <!-- Theme toggle button -->
            <div id="theme-btn" role="switch" aria-label="light/dark mode">
                <i class="far fa-lightbulb"></i>
            </div>
        </div>
    </div>
    <div class="container colored-text mb-5">
        <div class="mt-3">
            <div class="row">
                <div class="col-4">
                    <!-- Recent data -->
                    <div class="overflow-auto d-block recent-records-height mt-3">
                        <table class="table colored-text">
                            <thead class="table-background">
                                <tr>
                                    <th scope="col" colspan="4" class="text-center">Recent Records</th>
                                </tr>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Violation Count</th>
                                    <th scope="col">Headcount</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Looping through recent records -->
                                <% if (recentData.length === 0) { %>
                                    <tr>
                                        <th scope="col" colspan="4" class="text-center text-muted">No Recent Records</th>
                                    </tr>
                                <% } else { %>  
                                    <% for (let record of recentData) { %>
                                        <tr>
                                            <th scope="row"><%= helper.sliceDateString(record.recordDate) %></th>
                                            <td><%= record.violationCount %></td>
                                            <td><%= record.headcount %></td>
                                            <td>
                                                <form action="/<%= record._id %> " method="POST">
                                                    <button class="btn btn-success"><i class="fas fa-file-archive"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } %> 
                            </tbody>
                        </table>
                    </div>
                    <!-- For filtering dates -->
                    <hr>
                    <h5 class="mt-3">Filter older records</h5>
                    <% if (startDate && endDate) { %>
                        <h6 class="text-muted"><i class="far fa-clock"></i> <%= helper.sliceDateString(startDate) %> <i class="fas fa-long-arrow-alt-right"></i> <%= helper.sliceDateString(endDate) %></h6>
                    <% } else { %>
                        <h6 class="text-muted"><i class="far fa-clock"></i> All records shown</h6>
                    <% } %> 
                    <form action="/" class="mt-3" method="POST">
                        <div class="row gap-2">
                            <div class="col">
                                <label for="start-date" class="form-label">From</label>
                                <input type="date" class="form-control" name="dateFilter[start]" id="start-date" required>
                            </div>
                            <div class="col">
                                <label for="end-date" class="form-label">To</label>
                                <input type="date" class="form-control" name="dateFilter[end]" id="end-date" required>
                            </div>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success mt-3">Filter</button>
                        </div>
                    </form>
                    <form action="/" class="mt-3" method="GET">
                        <div class="d-grid gap-2">
                            <button class="btn btn-primary">Reset</button>
                        </div>
                    </form>
                    <!-- Old data table -->
                    <div class="overflow-auto d-block old-records-height mt-3">
                        <table class="table colored-text">
                            <thead class="table-background">
                                <tr>
                                    <th scope="col" colspan="4" class="text-center">Older Records</th>
                                </tr>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Violation Count</th>
                                    <th scope="col">Headcount</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Looping through old records -->
                                <% if (oldData.length === 0) { %>
                                    <tr>
                                        <th scope="col" colspan="4" class="text-center text-muted">No Old Records</th>
                                    </tr>
                                <% } else { %> 
                                    <% for (let record of oldData) { %>
                                        <tr>
                                            <th scope="row"><%= helper.sliceDateString(record.recordDate) %></th>
                                            <td><%= record.violationCount %></td>
                                            <td><%= record.headcount %></td>
                                            <td>
                                                <form action="/<%= record._id %>?_method=DELETE" method="POST">
                                                    <button class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                                <% } %> 
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="col-8">
                    <!-- For Chart -->
                    <canvas class="graph-background colored-text rounded" id="barChart"></canvas>
                    <!-- For aggregated statistics -->
                    <div class="row mt-3 gy-3">
                        <div class="col-6">
                            <div class="card">
                                <h5 class="card-header card-header-bg text-center"><i class="far fa-handshake"></i> Total Violations</h5>
                                <div class="card-body card-body-bg">
                                    <h6 class="card-title text-center">Aggregated violations for period</h6>
                                    <h3 class="text-center"><%= totalViolations %> </h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card">
                                <h5 class="card-header card-header-bg text-center"><i class="fas fa-users"></i> Total Headcount</h5>
                                <div class="card-body card-body-bg">
                                    <h6 class="card-title text-center">Aggregated headcount for period</h6>
                                    <h3 class="text-center"><%= totalHeadcount %> </h3>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card">
                                <h5 class="card-header card-header-bg text-center"><i class="fas fa-sort-amount-up"></i> Highest Violation Counts</h5>
                                <div class="card-body card-body-bg">
                                    <div class="container w-75">
                                        <% for (let record of topViolations) { %>
                                            <h6 class="card-title"><%= helper.sliceDateString(record.recordDate) %> <i class="fas fa-long-arrow-alt-right"></i> <span class="badge bg-danger"><%= record.violationCount %></span></h6>
                                        <% } %> 
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card">
                                <h5 class="card-header card-header-bg text-center"><i class="fas fa-sort-amount-up"></i> Highest Headcounts</h5>
                                <div class="card-body card-body-bg">
                                    <div class="container w-75">
                                        <% for (let record of topHeadcounts) { %>
                                            <h6 class="card-title"><%= helper.sliceDateString(record.recordDate) %> <i class="fas fa-long-arrow-alt-right"></i> <span class="badge bg-warning"><%= record.headcount %></span></h6>
                                        <% } %> 
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <form action="/reportView" class="mt-3" method="GET">
                        <div class="d-grid gap-2 col-4 mx-auto">
                            <button class="btn btn-info">View Report</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer accent-background colored-text bg-opacity-25 py-3 mt-auto">
        <div class="container">
            <span class="text-muted"><i class="fas fa-terminal"></i> Developed in partnership with Asia Pacific College, Philippines</span>
        </div>
    </footer>

    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
        integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"
        integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/"
        crossorigin="anonymous"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js"></script>

    <script>
        // For toggling theme
        const themeBtn = document.getElementById('theme-btn');
        themeBtn.addEventListener('click', () => {
            let theme = getCurrentTheme();
            if (theme === 'dark') {
                theme = 'light';
            } else {
                theme = 'dark';
            }
            localStorage.setItem('dashboard.theme', `${theme}`);
            loadTheme(theme);
        });

        const getCurrentTheme = () => {
            let theme = window.matchMedia('(prefers-color-scheme: dark')
            .matches ? 'dark' : 'light';
            localStorage.getItem('dashboard.theme') ? theme = localStorage.getItem('dashboard.theme') : null;
            return theme;
        }

        const loadTheme = (theme) => {
            const root = document.querySelector(':root');
            root.setAttribute('color-scheme', `${theme}`);
        }

        window.addEventListener('DOMContentLoaded', () => {
            loadTheme(getCurrentTheme());
        });
        
        // Parsing to access EJS data
        var oldData = '<%- JSON.stringify(oldData) %>';
        var workableData = JSON.parse(oldData);

        // Defining arrays for the chart
        let dateArray = [];
        let violationArray = [];
        let headcountArray = [];

        // Pushing record data to arrays
        for (let record of workableData) {
            dateArray.unshift(record.recordDate.slice(0, 10));
            violationArray.unshift(record.violationCount);
            headcountArray.unshift(record.headcount);
        }

        // For displaying charts
        const barChart = document.getElementById('barChart').getContext('2d');

        Chart.defaults.global.defaultFontColor = '#6A6A6A ';
        const barChartDisplay = new Chart(barChart, {
            type: 'bar', // bar, horizontalBar, pie, line, doughnut, radar, polarArea
            data: {
                labels: dateArray,
                datasets: [
                    {
                        label:'Violations',
                        data: violationArray,
                        backgroundColor: '#e07502',
                        fill: true,
                        borderColor: '#000',
                        color: '#000',
                        tension: 0.3
                    },
                    {
                        label:'Headcount',
                        data: headcountArray,
                        backgroundColor: '#fcca00',
                        fill: true,
                        borderColor: '#000',
                        color: '#000',
                        tension: 0.3
                    }
                ]
            },
            options: {
                title: {
                    display: true,
                    text: 'Violation Records',
                    fontSize: 25
                },
                layout: {
                    padding: {
                        left: 0,
                        right: 0,
                        bottom: 0,
                        top: 0
                    }
                },
                tooltips: {
                    enabled: true
                }
            }
        });

    </script>
</body>

</html>